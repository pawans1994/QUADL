<questestinterop>
  <item ident="_u5_m1_digtutor7_02a" title="question_1">
    <presentation>
      <material>
        <mattext texttype="text/plain">What is the minimum sample size necessary to estimate the proportion of automobile accidents that are caused by an intoxicated driver, if we want to be 95% confident to within 2% of the true proportion?</mattext></material>
      <response_lid rcardinality="Single" ident="LID_01">
        <render_choice>
          <response_label ident="Res1">
            <material>
              <mattext texttype="text/plain">2500</mattext></material></response_label>
          <response_label ident="Res2">
            <material>
              <mattext texttype="text/plain">50</mattext></material></response_label>
          <response_label ident="Res3">
            <material>
              <mattext texttype="text/plain">25</mattext></material></response_label>
          <response_label ident="Res4">
            <material>
              <mattext texttype="text/plain">5</mattext></material></response_label></render_choice></response_lid></presentation>
    <resprocessing>
      <outcomes>
        <decvar varname="SCORE" vartype="integer"/></outcomes>
      <respcondition>
        <conditionvar>
          <varequal respident="LID_01">Res1</varequal></conditionvar>
        <setvar varname="SCORE">10</setvar>
        <displayfeedback feedbacktype="Response" linkrefid="FeedBack0"/></respcondition>
      <respcondition>
        <conditionvar>
          <varequal respident="LID_01">Res2</varequal></conditionvar>
        <setvar varname="SCORE">0</setvar>
        <displayfeedback feedbacktype="Response" linkrefid="FeedBack1"/></respcondition>
      <respcondition>
        <conditionvar>
          <varequal respident="LID_01">Res3</varequal></conditionvar>
        <setvar varname="SCORE">0</setvar>
        <displayfeedback feedbacktype="Response" linkrefid="FeedBack2"/></respcondition>
      <respcondition>
        <conditionvar>
          <varequal respident="LID_01">Res4</varequal></conditionvar>
        <setvar varname="SCORE">0</setvar>
        <displayfeedback feedbacktype="Response" linkrefid="FeedBack3"/></respcondition></resprocessing>
    <itemfeedback ident="FeedBack0">
      <material>
        <mattext texttype="text/html">Correct. The sample size is at least 1/(0.02)  ^2 = 2500.</mattext></material></itemfeedback>
    <itemfeedback ident="FeedBack1">
      <material>
        <mattext texttype="text/plain">Incorrect. It appears that you forgot to square the margin of error.</mattext></material></itemfeedback>
    <itemfeedback ident="FeedBack2">
      <material>
        <mattext texttype="text/plain">Incorrect. It appears that you changed 2% to a decimal incorrectly.</mattext></material></itemfeedback>
    <itemfeedback ident="FeedBack3">
      <material>
        <mattext texttype="text/plain">Incorrect. It appears that you changed 2% to a decimal incorrectly and forgot to square the margin of error. </mattext></material></itemfeedback></item></questestinterop>
