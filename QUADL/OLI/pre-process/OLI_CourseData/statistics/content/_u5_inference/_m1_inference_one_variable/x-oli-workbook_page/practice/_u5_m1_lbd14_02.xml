                                        <m:mn>0</m:mn>
                                    </m:msub>
                                </m:mrow>
                            </m:math>, <m:math overflow="scroll">
                                <m:mrow>
                                    <m:mi mathvariant="normal">μ</m:mi>
                                    <m:mo>&gt;</m:mo>
                                    <m:msub>
                                        <m:mi mathvariant="normal">μ</m:mi>
                                        <m:mn>0</m:mn>
