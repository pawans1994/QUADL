<?xml version="1.0" encoding="UTF-8"?>
     <item ident="stats_item" title="didigetthis_center2q1">
        <presentation>
          <material>
            <mattext texttype="text/plain">The Current Population Survey records the incomes of a large sample of American households. What will be the  relationship between the mean and median of the collected data?</mattext></material>
          <response_lid rcardinality="Single" ident="LID_01">
            <render_choice>
              <response_label ident="Res1">
                <material>
                  <mattext texttype="text/plain">The mean will be bigger than the median,</mattext></material></response_label>
              <response_label ident="Res2">
                <material>
                  <mattext texttype="text/plain">The mean will be smaller than the median.</mattext></material></response_label>
              <response_label ident="Res3">
                <material>
                  <mattext texttype="text/plain">The mean and the median will be about the same.</mattext></material></response_label>
</render_choice></response_lid></presentation>
        <resprocessing>
          <outcomes>
            <decvar varname="SCORE" vartype="integer"></decvar></outcomes>
          <respcondition>
            <conditionvar>
              <varequal respident="LID_01">Res1</varequal></conditionvar>
            <setvar varname="SCORE">10</setvar>
            <displayfeedback feedbacktype="Response" linkrefid="FeedBack0"></displayfeedback></respcondition>
          <respcondition>
            <conditionvar>
              <varequal respident="LID_01">Res2</varequal></conditionvar>
            <setvar varname="SCORE">0</setvar>
            <displayfeedback feedbacktype="Response" linkrefid="FeedBack1"></displayfeedback></respcondition>
          <respcondition>
            <conditionvar>
              <varequal respident="LID_01">Res3</varequal></conditionvar>
            <setvar varname="SCORE">0</setvar>
            <displayfeedback feedbacktype="Response" linkrefid="FeedBack2"></displayfeedback></respcondition>
</resprocessing>
     <itemfeedback ident="hint">
      <hint>
        <hintmaterial>
          <material>
            <mattext texttype="text/plain">Recall that incomes typically have a distribution that is skewed right.</mattext></material></hintmaterial>
   </hint></itemfeedback>
<itemfeedback ident="FeedBack0">
          <material>
            <mattext texttype="text/plain">Correct. The distribution of incomes is skewed right, in which case the mean will be bigger than the median.</mattext></material></itemfeedback>
        <itemfeedback ident="FeedBack1">
          <material>
            <mattext texttype="text/plain">Incorrect. Recall that the distribution of incomes is skewed right, in which case the mean will be bigger than the median.</mattext></material></itemfeedback>
        <itemfeedback ident="FeedBack2">
          <material>
            <mattext texttype="text/plain">Incorrect. Recall that the distribution of incomes is skewed right, in which case the mean will be bigger than the median.</mattext></material></itemfeedback>
</item>
