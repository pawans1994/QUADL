<?xml version="1.0" encoding="UTF-8"?>
     <item ident="stats_item" title="one_cat_var2q1">
       <presentation>
          <material>
            <mattext texttype="text/plain">What is the difference between the two bar charts?</mattext></material>
          <response_lid rcardinality="Single" ident="LID_01">
            <render_choice>
              <response_label ident="Res1">
                <material>
                  <mattext texttype="text/plain">There is no difference.</mattext></material></response_label>
              <response_label ident="Res2">
                <material>
                  <mattext texttype="text/plain">The two bar charts represent the distributions of two different variables.</mattext></material></response_label>
              <response_label ident="Res3">
                <material>
                  <mattext texttype="text/plain">The first bar chart uses the counts, and the second bar chart uses the percentages.</mattext></material></response_label>
              <response_label ident="Res4">
                <material>
                  <mattext texttype="text/plain">The two bar charts represent the distribution of "Body Image" obtained from two different samples.</mattext></material></response_label>
</render_choice></response_lid></presentation>
        <resprocessing>
          <outcomes>
            <decvar varname="SCORE" vartype="integer"></decvar></outcomes>
          <respcondition>
            <conditionvar>
              <varequal respident="LID_01">Res1</varequal></conditionvar>
            <setvar varname="SCORE">0</setvar>
            <displayfeedback feedbacktype="Response" linkrefid="FeedBack0"></displayfeedback></respcondition>
          <respcondition>
            <conditionvar>
              <varequal respident="LID_01">Res2</varequal></conditionvar>
            <setvar varname="SCORE">0</setvar>
            <displayfeedback feedbacktype="Response" linkrefid="FeedBack1"></displayfeedback></respcondition>
          <respcondition>
            <conditionvar>
              <varequal respident="LID_01">Res3</varequal></conditionvar>
            <setvar varname="SCORE">10</setvar>
            <displayfeedback feedbacktype="Response" linkrefid="FeedBack2"></displayfeedback></respcondition>
          <respcondition>
            <conditionvar>
              <varequal respident="LID_01">Res4</varequal></conditionvar>
            <setvar varname="SCORE">0</setvar>
            <displayfeedback feedbacktype="Response" linkrefid="FeedBack3"></displayfeedback></respcondition>
</resprocessing>
    <itemfeedback ident="hint">
      <hint>
        <hintmaterial>
          <material>
            <mattext texttype="text/plain">Look at the vertical axis.</mattext></material></hintmaterial>
	</hint></itemfeedback>
        <itemfeedback ident="FeedBack0">
          <material>
            <mattext texttype="text/plain">Incorrect. There &lt;b&gt;is&lt;/b&gt; a difference between the two bar charts. Use the hint and try again.</mattext></material></itemfeedback>
        <itemfeedback ident="FeedBack1">
          <material>
            <mattext texttype="text/plain">Incorrect. The two bar charts represent the distribution of the same variable. Use the hint and try again.</mattext></material></itemfeedback>
        <itemfeedback ident="FeedBack2">
          <material>
            <mattext texttype="text/plain">Correct.</mattext></material></itemfeedback>
        <itemfeedback ident="FeedBack3">
          <material>
            <mattext texttype="text/plain">Incorrect. The two bar charts represent the distribution of "Body Image" obtained from the same sample. Use the hint and try again.</mattext></material></itemfeedback>
</item>
