<?xml version="1.0" encoding="UTF-8"?>

<questestinterop>
  <item ident="_u3_m2_digtutor6a" title="question_1">
    <presentation>
      <material>
        <mattext texttype="text/plain">In order to discover which of 4 weight loss programs gets the best results, subjects are randomly selected for each of the possible programs.</mattext></material>
      <response_lid rcardinality="Single" ident="LID_01">
        <render_choice>
          <response_label ident="Res1">
            <material>
              <mattext texttype="text/plain">experiment</mattext></material></response_label>
          <response_label ident="Res2">
            <material>
              <mattext texttype="text/plain">observational study</mattext></material></response_label></render_choice></response_lid></presentation>
    <resprocessing>
      <outcomes>
        <decvar varname="SCORE" vartype="integer"/></outcomes>
      <respcondition>
        <conditionvar>
          <varequal respident="LID_01">Res1</varequal></conditionvar>
        <setvar varname="SCORE">10</setvar>
        <displayfeedback feedbacktype="Response" linkrefid="FeedBack0"/></respcondition>
      <respcondition>
        <conditionvar>
          <varequal respident="LID_01">Res2</varequal></conditionvar>
        <setvar varname="SCORE">0</setvar>
        <displayfeedback feedbacktype="Response" linkrefid="FeedBack1"/></respcondition></resprocessing>
    <itemfeedback ident="FeedBack0">
      <material>
        <mattext texttype="text/plain">Correct. We assigned each subject to a weight loss program.</mattext></material></itemfeedback>
    <itemfeedback ident="FeedBack1">
      <material>
        <mattext texttype="text/plain">Incorrect. Each subject was not able to choose which program he/she wanted to use.</mattext></material></itemfeedback></item></questestinterop>
