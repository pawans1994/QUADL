<assessment id="_u9_condition-wbcs-DIGT">
    <title>tutor</title>
    <page>
        <question id="u9_condition-wbcs_1">
            <!--LO:identify_leukocytosis_leukopenia_leukemia_OBJ-->

            <body>Condition characterized by an abnormally high number of mature WBCs is:</body>
            
            <multiple_choice shuffle="true" select="single">
                <choice value="A">Leukopenia</choice>
                <choice value="B">Leukemia</choice>
                <choice value="C">Leukocytosis</choice>
                <choice value="D">neutropenia</choice>
            </multiple_choice>
            <part>
                <response match="A" score="0">
                    <feedback>Incorrect. Leukopenia is an abnormally low level of WBCs.</feedback>
                </response>
                <response match="B" score="0">
                    <feedback>Incorrect. Leukemia is characterized by a high number of WBC but this high number is the result of cancerous nonfunctional cells.</feedback>
                </response>
                <response match="C" score="10">
                    <feedback>Correct. Leukocytosis is a condition characterized by an abnormally high number of mature WBC.</feedback>
                </response>
                <response match="D" score="0">
                    <feedback>Incorrect. Neutropenia is a condition of abnormally low neutrophils.  
                    </feedback>
                </response>
            </part>
        </question>
      
    </page>
</assessment>
