<assessment id="_u9_prevent-clot-DIGT">
    <title>tutor</title>
    <page>
        <question id="u9_prevent-clot_1">
            <!--LO:describe_function_platelets_OBJ-->

            <body> What prevents platelets from forming a clot when an injury is not present?</body>
            
            <multiple_choice shuffle="true" select="single">
                <choice value="A">Low prostacyclin levels</choice>
                <choice value="B">High prostacyclin levels</choice>
                <choice value="C">Vasodialation</choice>
                <choice value="D">Exposed collagen fibers</choice>
            </multiple_choice>
            <part>
                <response match="A" score="0">
                    <feedback>Incorrect. During injury the prostacyclin levels will fall promoting platelet clot formation.</feedback>
                </response>
                <response match="B" score="10">
                    <feedback>Correct. High levels of prostacyclin produced by the endothelial lining prevents platelets from clotting.</feedback>
                </response>
                <response match="C" score="0">
                    <feedback>Incorrect. Vasodialation is part of the hemostatic response, but does not influence platelet clotting.</feedback>
                </response>
                <response match="D" score="0">
                    <feedback>Incorrect. Exposed collagen will increase platelet clot formation. 
                    </feedback>
                </response>
            </part>
        </question>
      
    </page>
</assessment>
