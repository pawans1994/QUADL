<assessment id="_u9_serum-DIGT">
    <title>tutor</title>
    <page>
        <question id="serum_1">
            <!--LO:define_plasma_serum_OBJ-->
 
            <body> Which of the following is not a component of serum?</body>
            
            <multiple_choice shuffle="true" select="single">
                <choice value="A">Albumin</choice>
                <choice value="B">Bicarbonate</choice>
                <choice value="C">Clotting proteins</choice>
                <choice value="D">Urea</choice>
            </multiple_choice>
            <part>
                <response match="A" score="0">
                    <feedback>Incorrect. Albumin is one of the most common proteins in plasma and serum.</feedback>
                </response>
                <response match="B" score="0">
                    <feedback>Incorrect. Bicarbonate is one of the electrolytes found in both serum and plasma.</feedback>
                </response>
                <response match="C" score="10">
                    <feedback> Correct. Serum does not contain the blood clotting proteins.</feedback>
                </response>
                <response match="D" score="0">
                    <feedback> Incorrect. Urea is a metabolic waste product found in both serum and plasma. 
                    </feedback>
                </response>
            </part>
        </question>
        
    </page>
</assessment>
