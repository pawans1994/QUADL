<assessment id="_u9_platelets-structure-DIGT">
    <title>tutor</title>
    <page>
        <question id="u9_platelets-structure_1">
            <!--LO:identify_structure_platelets_OBJ-->

            <body>Which of the following formed elements of the blood lack a nucleus?</body>
            
            <multiple_choice shuffle="true" select="single">
                <choice value="A">Platelets</choice>
                <choice value="B">WBCs</choice>
                <choice value="C">RBCs</choice>
                <choice value="D">Platelets and RBCs</choice>
            </multiple_choice>
            <part>
                <response match="A" score="0">
                    <feedback>Incorrect. Platelets are one of the two formed elements that lack a nucleus.</feedback>
                </response>
                <response match="B" score="0">
                    <feedback>Incorrect. WBCs have at least one nucleus.</feedback>
                </response>
                <response match="C" score="0">
                    <feedback>Incorrect. RBCs are one of the formed elements that lacks a nucleus.</feedback>
                </response>
                <response match="D" score="10">
                    <feedback>Correct. Both RBCs and Platelets lack nuclei. 
                    </feedback>
                </response>
            </part>
        </question>
      
    </page>
</assessment>
