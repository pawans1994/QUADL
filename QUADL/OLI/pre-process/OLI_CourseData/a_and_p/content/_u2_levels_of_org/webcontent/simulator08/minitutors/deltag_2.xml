 <?xml version="1.0" encoding="UTF-8"?>
     <questestinterop>
       <item ident="deltag_2">
         <presentation>
           <material>
             <mattext texttype="text/plain">Select the standard energy difference between form A and form B such that the equilibrium position becomes 0.25 for form A.  Use the numerical values of the standard energies of A and B at the top of the graph to calculate ∆G<sup>0</sup>. 
               
&lt;b&gt;What is the ∆G0 at this equilibrium point? &lt;/b&gt;</mattext></material>
           <response_lid rcardinality="Single" ident="deltag2_01">
             <render_choice>
               <response_label ident="Res1">
                 <material>
                   <mattext texttype="text/plain">+ 0.75</mattext></material></response_label>
               <response_label ident="Res2">
                 <material>
                   <mattext texttype="text/plain">approximately +2</mattext></material></response_label>
               <response_label ident="Res3">
               <material>
                 <mattext texttype="text/plain">approximately -2</mattext></material></response_label>
               </render_choice>
           </response_lid>
         </presentation>
         <resprocessing>
           <outcomes>
             <decvar varname="SCORE" vartype="integer"/></outcomes>
           <respcondition>
             <conditionvar>
               <varequal respident="deltag2_01">Res1</varequal>
             </conditionvar>
             <setvar varname="SCORE">0</setvar>
             <displayfeedback feedbacktype="Response" linkrefid="FeedBack1"/>
           </respcondition>
           <respcondition>
             <conditionvar>
               <varequal respident="deltag2_02">Res2</varequal></conditionvar>
             <setvar varname="SCORE">0</setvar>
             <displayfeedback feedbacktype="Response" linkrefid="FeedBack2"/></respcondition>
           <respcondition>
             <conditionvar>
               <varequal respident="deltag2_03">Res3</varequal></conditionvar>
             <setvar varname="SCORE">10</setvar>
             <displayfeedback feedbacktype="Response" linkrefid="FeedBack3"/></respcondition>
        </resprocessing>
         <itemfeedback ident="hint">
           <hint>
             <hintmaterial>
               <material>
                 <mattext texttype="text/plain">You need to calculate a difference in energy.</mattext>
               </material>
             </hintmaterial>  
             <hintmaterial>
               <material>
                 <mattext texttype="text/plain">The direction of the reaction is from A to B.</mattext>
               </material>
             </hintmaterial>  
            </hint>
         </itemfeedback>
         <itemfeedback ident="FeedBack1">
           <material>
             <mattext texttype="text/plain">Incorrect, you need to calculate a difference in energy.</mattext></material></itemfeedback>
         <itemfeedback ident="FeedBack2">
           <material>
             <mattext texttype="text/plain">Incorrect, ∆G0 = G0B - G0A, ie. products minus reactants.</mattext></material></itemfeedback>
         <itemfeedback ident="FeedBack3">
           <material>
             <mattext texttype="text/plain">Correct.</mattext></material></itemfeedback>
        </item>
     </questestinterop>
