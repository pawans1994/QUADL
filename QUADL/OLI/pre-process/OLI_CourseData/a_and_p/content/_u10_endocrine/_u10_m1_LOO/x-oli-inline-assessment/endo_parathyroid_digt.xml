<assessment id="endo_parathyroid_digt">
    <title>tutor</title>
    <page>
        <question id="q1">
            <!--LO:endo_parathyroid_digt-->
            <body>What hormone(s) are produced by the parathyroid glands?</body>
            <multiple_choice shuffle="true" select="single">
                <choice value="A">ACTH</choice>
                <choice value="B">ADH</choice>
                <choice value="C">LH</choice>
                <choice value="D">PTH</choice>
            </multiple_choice>
            <part>
                <response match="A" score="0">
                    <feedback>Incorrect.   Adrenocorticotropic hormone is secreted by the anterior pituitary.</feedback>
                </response>
                <response match="B" score="0">
                    <feedback>Incorrect.  Antidiuretic hormone is released by the posterior pituitary.</feedback>
                </response>
                <response match="C" score="0">
                    <feedback>Incorrect.  Luteinizing hormone is secreted by the anterior pituitary.</feedback>
                </response>
                <response match="D" score="10">
                    <feedback>Correct.  Parathyroid hormone (PTH) is secreted by the parathyroid gland.</feedback>
                </response>
            </part>
        </question>
    </page>
